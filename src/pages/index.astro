---
import Main from "../layouts/Main.astro";
import CardsContainer from "../components/CardsContainer.astro";
import ExperienceContainer from "../components/ExperienceContainer.astro";
const profilePicture = "images/bild.png";

/* const blogs = await Astro.glob<{
  title: string;
  poster: string;
  subtitle: string;
}>("../pages/blogs/*.md"); */
---

<Main title="Home">
  <div class="profile">
    <img
      class="profile__picture"
      width="100px"
      height="100px"
      src={profilePicture}
      alt="pb"
    />

    <div class="profile__details">
      <h1>Julian Schaefers</h1>
      <h2>Oberschüler, 18 Jahre alt</h2>
      <p>
        Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy
        eirmod tempor.
      </p>
    </div>
  </div>

  <hr />

  <CardsContainer
    cards={[
      {
        title: "Goetheschule Dieburg",
        content1: "10 Schuljahre im Gymnasialzweig erfolgreich abgeschlossen",
        content2: "",
        gradientFrom: "#fde68a",
        gradientTo: "#fca5a5",
        to: "https://goethe.schule/",
      },
      {
        title: "Alfred-Delp-Schule Dieburg",
        content1: "Leistungsfächer: Informatik, Mathe",
        content2: "Angestrebter Schulabschluss: Fachhochschulreife",
        gradientFrom: "#6ee7b7",
        gradientTo: "#9333ba",
        to: "https://ads-dieburg.de/",
      },
    ]}
  />

  <!-- <div class="featured-blogs">
    <h3 class="featured-blogs__title">Featured Blogs</h3>
    <p class="featured-blogs__description">
      Opinion pieces that will change everything you know about web development.
    </p>
  </div>

  <ol class="blogs">
    {
      blogs.map((blog) => (
        <li class="blogs__list">
          <a class="blog__link" href={blog.url}>
            {blog.frontmatter.title}
          </a>
        </li>
      ))
    }
  </ol> -->

  <hr />

  <ExperienceContainer />
</Main>

<style>
  hr {
    border: none;
    height: 0.1px;
    background-color: var(--grey-200);
    opacity: 0.3;
    margin-top: 5rem;
    margin-bottom: 4rem;
  }

  .profile {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    padding: 1rem 0 3rem 0;
  }

  .profile__details {
    flex: 1 0 300px;
  }

  .profile__details > h1 {
    margin-top: 0;
  }

  .profile__picture {
    height: auto;
    width: 18rem;
    margin: -4.4rem 2rem 1rem 0;
    background: var(--profilePic);
    padding: 0.8rem 0.8rem 1rem 1rem;
    border-radius: 350px 100px 100px 350px;
  }

  .featured-blogs {
    margin: 0;
    padding: 3rem 0 0 0;
  }

  .featured-blogs__title {
    font-size: 2rem;
    color: var(--grey-900);
  }

  .featured-blogs__description {
    margin-top: -1.2rem;
  }

  .blogs {
    font-size: 1rem;
    font-weight: 500;
  }

  .blog__list {
    border-bottom: 1px solid;
    border-color: var(--grey-200);
  }

  .blog__link {
    opacity: 1;
    height: 100%;
    display: block;
    padding: 1rem 0;
    color: var(--grey-200);
    text-decoration: none;
    transition: opacity 0.2s ease-in-out;
    border-bottom: 1px solid;
    border-color: var(--grey-200);
  }

  .blog__link:hover {
    opacity: 0.7;
  }
</style>
