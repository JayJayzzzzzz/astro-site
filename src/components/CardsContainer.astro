---
import Card from "./Card.astro";
import HeadingNeon from "./HeadingNeon.astro";

import type { Props as CardProp } from "./Card.astro";

type Props = {
  cards: CardProp[];
};

const { cards } = Astro.props;
---

<HeadingNeon title="Bildung" />
<div class="cards">
  {cards.map((card) => <Card {...card} />)}
</div>

<style>
  .cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2.5rem;
    margin-bottom: 10rem;
    width: 100%;
  }

  @media screen and (min-width: 1245px) {
    .cards {
      flex-direction: row;
    }
  }
</style>
